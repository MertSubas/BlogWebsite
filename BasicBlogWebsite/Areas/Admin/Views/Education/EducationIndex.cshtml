@model List<EducationViewModel>
@{
    ViewData["Title"] = "EducationIndex";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Add this CSS to make the modal full-width */
    .modal-fullpage {
        width: 100vw;
        margin: 0;
        max-width: 100%;
    }

    /* Optional: Set a maximum width for the modal content */
    .modal-content {
        max-width: 90%; /* Adjust this value as needed */
        width: 100%;
        overflow: hidden;
        margin: auto; /* This centers the modal content horizontally */
        margin-top: 25px;
    }

    #resim {
        width: 8rem;
        height: 4rem;
        border-radius: 0;
    }

    .texts {
        white-space: break-spaces !important;
    }

</style>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title">Eğitim Listesi</h4>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <input type="button" class="btn btn-info btn-sm" id="egitimEkle" value="Ekle" />
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Eğitim Bilgisi</th>
                        </tr>
                    </thead>
                    <tbody class="blog-list">
                        @{
                            int sayi = 1;
                        }
                        @foreach (var post in Model)
                        {
                            <tr class="blog-item">
                                <td class="fnt-bld">@($"{sayi}.")</td>
                                <td class="texts">@post.Name</td>
                                <td><label class="badge badge-@(post.Statu?"success":"danger")">@(post.Statu ? "Yayında" : "Yayında Değil")</label></td>
                                <td><input type="submit" class="btn btn-warning btn-sm" id="btnEdit" onclick="educationEdit('@post.EducationId')" value="Güncelle" /></td>
                                <td>
                                    <button class="btn btn-@(post.Statu ? "danger" : "success") btn-sm changeStatu" data-post-id="@post.EducationId">
                                        @(post.Statu ? "Yayından Kaldır" : "Yayına Al")
                                    </button>
                                </td>
                            </tr>
                            sayi++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@* Modal Start *@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-fullpage" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button id="closeModalIcon" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="margin-top: -1rem;">

                <div class="page-wrapper bg-blue p-t-100 p-b-100 font-robo">
                    <div class="wrapper wrapper--w680">
                        <div class="card card-1">
                            <div class="card-heading"></div>
                            <div class="card-body">
                                <h2 class="title">Eğitim Bilgisi Ekle</h2>
                                <br />
                                <form method="POST">

                                    <div class="form-group">
                                        <label for="education">Eğitim Bilgisi</label>
                                        <input type="text" class="form-control" id="education" placeholder="Eğitim Bilgisi">
                                    </div>
                                    <div class="form-group">
                                        <label for="educationStatu">Eğitim Statüsü</label>
                                        <select class="form-control" id="educationStatu">
                                            <option value="True">Aktif</option>
                                            <option value="False">Pasif</option>
                                        </select>
                                    </div>

                                    <input type="button" class="btn btn-gradient-primary mr-2" id="btneducationAdd" value="Kaydet" />
                                    <input type="button" class="btn btn-gradient-primary mr-2" id="btneducationEdit" value="Güncelle" />

                                    <button class="btn btn-light closeModal">İptal</button>

                                    <input type="hidden" id="modalEducationId" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@* Modal End *@


@section Scripts {
    
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    <script>
        @*Güncelleme İşlemi Start*@


            function educationEdit(id) {
                console.log(id);
                $("#btneducationEdit").show();
                $.ajax({
                    type: "GET",
                    url: "/Admin/Education/GetData/" + id,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    cache: false,
                    success: function (response) {
                        console.log(response);
                        var statusValue = response.statu === true;
                        $("#educationStatu").val(statusValue ? "True" : "False");
                        $("#education").val(response.name);
                        $("#modalEducationId").val(response.EducationId);
                        $("#btneducationAdd").hide();
                        $(".title").text("Eğitim Bilgisi Güncelle");
                    }
                });
                $('#myModal').modal('show');
            }

        $(document).ready(function () {
            $("#btnSliderEdit").on("click", function () {
                var educationId = $("#modalEducationId").val();
                var name = $("#education").val();
                var educationStatu = ($("#educationStatu").val() === "True");

                var postDatas = {
                    EducationId: educationId,
                    Name: name,
                    Statu: educationStatu
                };
                $.ajax({
                    type: "POST",
                    url: "/Admin/Education/AddEducations",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify(postDatas),
                    success: function (response) {
                        $('#myModal').modal('hide');
                        location.reload();
                    },
                    error: function (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata',
                            text: 'Bir Hata Oluştu Tekrar Deneyiniz!',
                            timer: 3000,
                            showConfirmButton: false
                        });
                    }
                });

            });


        });
        @*Güncelleme İşlemi End*@
        @*Kaydet İşlemi Start*@
            $(document).ready(function () {
                $("#egitimEkle").click(function () {
                    $("#btneducationEdit").hide();
                    $("#btneducationAdd").show();
                    $(".card-title").text("Eğitim Bilgisi Kaydet");
                    document.getElementById('modalEducationId').value = "";
                    $('#myModal').modal('show');
                });

                $('#btneducationAdd').click(function () {
                    var educationStatu = ($("#educationStatu").val() === "True");
                    var name = $("#education").val();
                    var postData = {
                        Name: name,
                        Statu: educationStatu,
                    };
                    console.log(postData)
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Education/AddEducations",
                        data: JSON.stringify(postData),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (response) {
                            $('#myModal').modal('hide');
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı',
                                text: 'Kayıt Başarıyla Eklendi!',
                                timer: 3000,
                                showConfirmButton: false
                            });
                            location.reload();
                        },
                        error: function (error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata',
                                text: 'Bir Hata Oluştu Tekrar Deneyiniz!',
                                timer: 3000,
                                showConfirmButton: false
                            });
                        }
                    });

                });


            });
        @*Kaydet İşlemi End*@


        @*Close Modal Start*@
            $("#closeModalIcon").click(function () {
                $('#myModal').modal('hide');
            });
        $(".closeModal").click(function () {
            $('#myModal').modal('hide');
        });
        @*Close Modal End*@


        @*Delete Start*@

            $('.changeStatu').click(function () {
                var postId = $(this).data('post-id');
                console.log(postId);
                togglePostStatus(postId);
            });


        function togglePostStatus(postId) {
            $.ajax({
                type: "POST",
                url: "/Admin/Education/Delete",
                data: { id: postId },
                success: function (response) {
                    Swal.fire({
                        icon: response ? 'success' : 'error',
                        title: response ? 'Başarılı' : 'Kaldırıldı',
                        text: response ? 'Blog Yayına Alındı!' : 'Blog Yayından Kaldırıldı!',
                    }).then(() => {
                        location.reload();
                    });
                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while updating post status.',
                    });
                }
            });
        }

        @*Delete End*@



    </script>
}

