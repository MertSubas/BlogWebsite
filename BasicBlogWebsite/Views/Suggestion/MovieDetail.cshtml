@model SuggestionViewModel
@{
    ViewData["Title"] = "MovieDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}
<style>
    .hakkinda {
        font-size: 3rem;
        text-align: center;
        color: beige;
        font-family: emoji;
    }
</style>
<div class="breadcumb-area bg-img" style="background-color:lightslategray">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div>
                    <h2 class="hakkinda">
                        Film Detayları
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container mt-5">
    <div class="row">
        <!-- Film Görseli -->
        <div class="col-md-6">
            <img style="width:20rem;" src="@Model.SuggestionImage" alt="Movie Image" class="img-fluid">
        </div>
        <!-- Film Detayları -->
        <div class="col-md-6">
            <h3>@Model.SuggestionTitle</h3>
            @Html.Raw(Model.SuggestionDescription)
   <hr />
            <p><a class="btn original-btn" href=@Model.MovieUrl>Fragman</a></p>
         
        </div>
    </div>
</div>

